{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@home/*": ["app/feature/home/*"],
      "@constants/*": ["constants/*"],
      "@app/*": ["app/*"],
      "@auth/*": ["app/feature/auth/*"],
      "@components/*": ["app/components/*"],
      "@/lib/*": ["./src/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"], 
  "exclude": ["node_modules"]
}
